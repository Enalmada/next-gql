{
  "name": "@enalmada/next-gql",
  "version": "0.0.3",
  "scripts": {
    "build": "rm -rf dist && bun build.ts && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly",
    "build:pack": "bun run build && npm pack",
    "lint": "eslint . --ext .ts,.tsx,.cjs,.mjs && bun type-check",
    "lint:fix": "eslint . --fix --ext .ts,.tsx,.cjs,.mjs && bun type-check",
    "precommit": "bun lint-staged",
    "prepare": "husky install",
    "release": "bun run build && bunx changeset publish",
    "test": "bun run test:unit",
    "test:unit": "cross-env NODE_ENV=test vitest",
    "type-check": "bun --bun tsc --noEmit"
  },
  "dependencies": {
    "@envelop/generic-auth": "^6.1.1",
    "@escape.tech/graphql-armor": "^2.3.1",
    "@graphql-yoga/plugin-apq": "^2.0.5",
    "@graphql-yoga/plugin-csrf-prevention": "^2.0.5",
    "graphql-yoga": "^4.0.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^20.8.5",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "bun-types": "^1.0.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fixpack": "^4.0.0",
    "graphql": "^16.8.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "next": "^13.5.4",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "graphql": "^16.8.1",
    "next": "^13.5.4"
  },
  "author": "",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Enalmada/next-gql/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Enalmada/next-gql.git"
  },
  "homepage": "https://github.com/Enalmada/next-gql",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./server": "./dist/server/index.js"
  }
}
