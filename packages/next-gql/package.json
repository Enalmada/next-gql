  "description": "",
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Enalmada/next-gql/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Enalmada/next-gql.git"
  },
  "homepage": "https://github.com/Enalmada/next-gql",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./server": "./dist/server/index.js",
